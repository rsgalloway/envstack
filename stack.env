
# The global environment file inherited by all environments.
#
# https://github.com/rsgalloway/envstack

all: &default
  HELLO: world
  FOO: bar
  PYVERSION: 3.9
  LIB: lib/python${PYVERSION}

darwin:
  <<: *default
  ROOT: /Volumes/dev/${LIB}

linux:
  <<: *default
  ROOT: /mnt/dev/${LIB}

windows:
  <<: *default
  ROOT: //dev/${LIB}
